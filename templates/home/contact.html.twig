{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5 mb-5">Contactez-nous</h1>

	{# {{ dump(result) }} #}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success" role="alert">{{ message }}</div>
	{% endfor %}

	<div class="d-flex justify-content-center m-auto pt-5 pb-5">
		{{ form_start(contactForm) }}

		<div class="mb-3">
			<label for="contact_Nom">{{ form_label(contactForm.Nom) }}</label>
			{{ form_widget(contactForm.Nom, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(contactForm.Nom) }}
		</div>
		<div class="mb-3">
			<label for="contact_Penom">{{ form_label(contactForm.Prenom) }}</label>
			{{ form_widget(contactForm.Prenom, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(contactForm.Prenom) }}
		</div>
		<div class="mb-3">
			<label for="contact_Sujet">{{ form_label(contactForm.Sujet) }}</label>
			{{ form_widget(contactForm.Sujet, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(contactForm.Sujet) }}
		</div>
		<div class="mb-3">
			<label for="contact_Email">{{ form_label(contactForm.Email) }}</label>
			{{ form_widget(contactForm.Email, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(contactForm.Email) }}
		</div>
		<div class="mb-3">
			<label for="contact_Telephone">{{ form_label(contactForm.Telephone) }}</label>
			{{ form_widget(contactForm.Telephone, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(contactForm.Telephone) }}
		</div>
		<div class="mb-3">
			<label for="contact_Message">{{ form_label(contactForm.Message) }}</label>
			{{ form_widget(contactForm.Message, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(contactForm.Message) }}
		</div>
		{{ form_end(contactForm) }}
	</div>

{% endblock %}